{
  "name": "hivecode",
  "version": "1.0.13",
  "description": "Split-pane PowerShell terminal multiplexer with Claude Code",
  "main": "main.js",
  "author": "HiveCode",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "dist": "node scripts/build.js",
    "dist:nobump": "electron-builder --win",
    "dist:portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.hivecode.app",
    "productName": "HiveCode",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "asar": true,
    "asarUnpack": [
      "node_modules/node-pty/prebuilds/win32-x64/**/*"
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "CHANGELOG.md",
      "node_modules/**/*",
      "!node_modules/node-pty/prebuilds/darwin-*/**",
      "!node_modules/node-pty/prebuilds/win32-arm64/**",
      "!node_modules/node-pty/third_party/**",
      "!node_modules/**/{test,tests,__tests__,docs,example,examples}/**",
      "!node_modules/**/*.{md,ts,map}"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "shortcutName": "HiveCode"
    },
    "publish": {
      "provider": "github",
      "owner": "kccitsales",
      "repo": "hivecode"
    }
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^5.5.0",
    "electron-updater": "^6.8.3",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.8.1"
  }
}
